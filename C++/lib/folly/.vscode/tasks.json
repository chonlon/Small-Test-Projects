{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-lfolly",
                "-ljemalloc",
                "-ldouble-conversion",
                "-lglog",
                "-ldl",
                "-lpthread",
                "-lgflags",
                "-levent",
                "-lboost_context",
                "-liberty",
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cmake build current dir",
            "command": "cmake ..",
            "args":[
                "-DCMAKE_TOOLCHAIN_FILE=/mnt/c/Users/lon/vcpkg/scripts/buildsystems/vcpkg.cmake"
            ]
        }
    ]
}